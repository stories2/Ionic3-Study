    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to android|ios on device|emulator",
            "type": "cordova",
            "request": "attach",
            "platform": "android|ios",
            "target": "device|emulator",
            "cwd": "${workspaceFolder}",
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/myapp\\src\\app\\app.component.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}